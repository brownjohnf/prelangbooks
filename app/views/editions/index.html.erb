<%- model_class = Edition -%>
<div class="page-header">
  <h1><%=t '.title', :default => Edition %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:binding) %></th>
      <th><%= model_class.human_attribute_name(:pages) %></th>
      <th><%= model_class.human_attribute_name(:language) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @editions.each do |edition| %>
      <tr>
        <td><%= edition.id %></td>
        <td><%= edition.name %></td>
        <td><%= edition.title %></td>
        <td><%= edition.binding %></td>
        <td><%= edition.pages %></td>
        <td><%= edition.language %></td>
        <td><%=l edition.created_at, format: :long %></td>
        <td>
          <%= link_to edition_path(edition), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to edition_path(edition), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_edition_path,
            :class => 'btn btn-primary' %>
