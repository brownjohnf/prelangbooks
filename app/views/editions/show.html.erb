<%- model_class = Edition -%>
<div class="page-header">
  <h1><%=t '.title', :default => Edition %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @edition.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @edition.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:binding) %></dt>
      <dd><pre class="prettyprint"><%= @edition.binding %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:pages) %></dt>
      <dd><pre class="prettyprint"><%= @edition.pages %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:language) %></dt>
      <dd><pre class="prettyprint"><%= @edition.language %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              editions_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_edition_path(@edition), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              edition_path(@edition),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

